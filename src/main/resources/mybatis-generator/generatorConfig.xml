<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE generatorConfiguration
        PUBLIC "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN"
        "http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd">

<generatorConfiguration>
    <properties resource="config.properties"/>
    <context id="pacfg" targetRuntime="MyBatis3" defaultModelType="flat">
        <property name="autoDelimitKeywords" value="true"/>
        <property name="beginningDelimiter" value="`"/>
        <property name="endingDelimiter" value="`"/>
        <plugin type="mybatis.generator.generator.LombokPlugin"/>

        <commentGenerator>
            <property name="suppressAllComments" value="true"/>
        </commentGenerator>

        <jdbcConnection driverClass="${db.pacfg.driver}"
                        connectionURL="${db.pacfg.url}"
                        userId="${db.pacfg.username}"
                        password="${db.pacfg.password}">
        </jdbcConnection>

        <!-- 指定生成的类型为java类型，避免数据库中number等类型字段 -->
        <javaTypeResolver type="mybatis.generator.generator.JavaTypeResolverForceIntegerImpl">
            <property name="forceBigDecimals" value="false"/>
        </javaTypeResolver>

        <javaModelGenerator targetPackage="mybatis.generator.model" targetProject="src/main/java"/>

        <sqlMapGenerator targetPackage="mapper" targetProject="src/main/resources/META-INF"/>

        <javaClientGenerator targetPackage="mybatis.generator.mapper"
                             targetProject="src/main/java" type="XMLMAPPER"/>

        <table tableName="coupon_auth" enableSelectByExample="false" enableUpdateByPrimaryKey="false"
               enableUpdateByExample="false" enableDeleteByPrimaryKey="false"
               enableDeleteByExample="false" enableCountByExample="false">
            <!--mysql 配置-->
            <generatedKey column="id" sqlStatement="Mysql" identity="true"/>
        </table>
    </context>
</generatorConfiguration>
